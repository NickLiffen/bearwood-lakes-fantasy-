{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["netlify/functions/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
